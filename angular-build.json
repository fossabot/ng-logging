{
  "$schema": "./node_modules/@bizappframework/angular-build/schemas/schema-draft-04.json#",
  "libs": [
    {
      "name": "ng-logging",
      "srcDir": "modules/ng-logging",
      "outDir": "dist/packages/ng-logging",
      "libraryName": "baf.ngLogging",

      "tsTranspilation": {
        "tsconfig": "tsconfig-build.json",
        "copyTemplateAndStyleUrls": false,
        "inlineMetaDataResources": false
      },

      "packageOptions": {
        "packageJsonFile": "package.json"
      },

      "envOverrides": {
        "prod": {
          "clean": {
            "beforeRun": {
              "cleanOutDir": true
            }
          },
          "copy": [
            "../../LICENSE",
            "README.md"
          ],
          "banner": "../banner.txt",
          "bundles": [
            {
              "entry": "index.js",
              "entryRoot": "tsOutDir",
              "libraryTarget": "es",
              "outDir": "bundles"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "es",
              "outDir": "bundles",
              "transformScriptTargetOnly": true,
              "scriptTarget": "es5"
            },
            {
              "entryRoot": "prevBundleOutDir",
              "libraryTarget": "umd",
              "outDir": "bundles",
              "namedExports": true
            }
          ],
          "packageOptions": {
            "packageJsonFile": "package.json",
            "reExportTypingsAndMetaDataAs": "[packagename]"
          }
        }
      }
    },
    {
      "extends": "ng-logging",
      "name": "ng-logging-configuration",
      "srcDir": "modules/ng-logging-configuration",
      "outDir": "dist/packages/ng-logging-configuration",

      "libraryName": "baf.ngLoggingConfiguration",

      "externals": {
        "@bizappframework/ng-logging": "baf.ngLogging",
        "@bizappframework/ng-config": "baf.ngConfig"
      }
    },
    {
      "extends": "ng-logging",
      "name": "ng-application-insights",
      "srcDir": "modules/ng-application-insights",
      "outDir": "dist/packages/ng-application-insights",

      "libraryName": "baf.ngApplicationInsights",

      "externals": {
        "applicationinsights-js": "AppInsights"
      }
    },
    {
      "extends": "ng-logging",
      "name": "ng-application-insights-configuration",
      "srcDir": "modules/ng-application-insights-configuration",
      "outDir": "dist/packages/ng-application-insights-configuration",

      "libraryName": "baf.ngApplicationInsightsConfiguration",

      "externals": {
        "@bizappframework/ng-application-insights": "baf.ngApplicationInsights",
        "@bizappframework/ng-config": "baf.ngConfig"
      }
    },
    {
      "extends": "ng-logging",
      "name": "ng-logging-application-insights",
      "srcDir": "modules/ng-logging-application-insights",
      "outDir": "dist/packages/ng-logging-application-insights",

      "libraryName": "baf.ngLoggingAi",

      "externals": {
        "@bizappframework/ng-application-insights": "baf.ngApplicationInsights",
        "@bizappframework/ng-logging": "baf.ngLogging"
      }
    },
    {
      "extends": "ng-logging",
      "name": "ngrx-store-logger",
      "srcDir": "modules/ngrx-store-logger",
      "outDir": "dist/packages/ngrx-store-logger",

      "libraryName": "baf.ngrxStoreLogger",

      "externals": {
        "@ngrx/store": "ngrx.store"
      }
    }
  ],
  "apps": [
    {
      "name": "generate",
      "platformTarget": "web",
      "srcDir": "samples/ng-logging-aspnetcore-sample/ClientApp",
      "outDir": "samples/ng-logging-aspnetcore-sample/ClientApp/generated",

      "clean": {
        "beforeRun": {
          "cleanOutDir": true
        }
      },

      "polyfills": [
        "ie-polyfills.ts"
      ],
      "polyfillsChunkName": "ie-polyfills.min",

      "bundlesHash": false,
      "publicPath": "/",
      "skip": true,
      "envOverrides": {
        "generate": {
          "skip": false
        }
      }
    },
    {
      "name": "browser-app",
      "platformTarget": "web",
      "srcDir": "samples/ng-logging-aspnetcore-sample/ClientApp",
      "outDir": "samples/ng-logging-aspnetcore-sample/wwwroot",
      "entry": "main.browser.ts",
      "tsconfig": "tsconfig.json",

      "copy": [
        //"appsettings.json",
        "favicon.ico",
        "generated/ie-polyfills.min.js"
      ],

      "polyfills": [
        "core-js/es6/reflect",
        "core-js/es7/reflect",
        "polyfills.ts"
      ],

      "publicPath": "/",
      "baseHref": "~/",
      "htmlInject": {
        "resourceHints": true,
        "baseHrefOut": "../Views/Shared/_BaseHref.generated.cshtml",
        "iconsOut": "../Views/Shared/_Favicons.generated.cshtml",
        "resourceHintsOut": "../Views/Shared/_ResourceHints.generated.cshtml",
        "runtimeInlineOut": "../Views/Shared/_Runtime.generated.cshtml",
        "stylesOut": "../Views/Shared/_Styles.generated.cshtml",
        "scriptsOut": "../Views/Shared/_Scripts.generated.cshtml",
        "customAttributes": {
          "asp-append-version": "true"
        }
      },

      //"vendorChunk": true,
      "environmentVariables": {
        "aiInstrumentationKey": "process.env.NG_LOGGING_DEMO_APP_INSIGHTS_KEY"
      },

      "envOverrides": {
        "analyze": {
          "bundleAnalyzer": {
            "openAnalyzer": true
          },
          // "stats": {
          //   "modules": true,
          //   "chunks": true,
          //   "chunkModules": true,
          //   "entrypoints": true,
          //   "excludeModules": "node_modules"
          // },
          "concatenateModules": false
        },
        "prod": {
          "clean": {
            "beforeRun": {
              "cleanOutDir": true,
              "paths": [
                "../ClientApp/.bo-cache/"
              ]
            },
            "allowOutsideOutputDir": true
          },
          "bundlesHash": false,
          "chunksHash": false,
          "moduleReplacements": [
            {
              "resourcePath": "./environments/environment.ts",
              "newResourcePath": "./environments/environment.prod.ts"
            }
          ]
        },
        "aot": {
          "tsconfig": "tsconfig.aot.json",

          "polyfills": [
            "polyfills.ts"
          ]
        }
      }
    }
  ]
  //"logLevel": "debug"
}
